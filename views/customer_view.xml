<odoo>
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">trandom.customer.form</field>
        <field name="model">trandom.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="mail"/>
                        <field name="trips"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_customer_tree" model="ir.ui.view">
        <field name="name">trandom.customer.tree</field>
        <field name="model">trandom.customer</field>
        <field name="arch" type="xml">
            <tree string="Customers">
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="trips"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_kanban" model="ir.ui.view">
        <field name="name">trandom.customer.kanban</field>
        <field name="model">trandom.customer</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="trips"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="'https://content.skyscnr.com/m/5ef9ee6d084a5dd7/original/GettyImages-457926043_doc.jpg'" alt="imagen customer"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <span> </span>
                                    <field name="surname"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>