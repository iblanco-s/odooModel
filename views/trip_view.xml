<odoo>
    <record id="view_trip_form" model="ir.ui.view">
        <field name="name">trandom.trip.form</field>
        <field name="model">trandom.trip</field>
        <field name="arch" type="xml">
            <form string="Trip">
                <sheet>
                    <group>
                        <field name="id" readonly="1"/>
                        <field name="trip_type"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="trip_info">
                            <tree>
                                <!-- Define the fields to display in the One2many list view here -->
                            </tree>
                            <form>
                                <!-- Define the fields to display in the One2many form view here -->
                            </form>
                        </field>
                        <field name="cities" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trip_tree" model="ir.ui.view">
        <field name="name">trandom.trip.tree</field>
        <field name="model">trandom.trip</field>
        <field name="arch" type="xml">
            <tree string="Trip">
                <field name="id"/>
                <field name="trip_type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_trip" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">trandom.trip</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_trip_tree"/>
    </record>

    <menuitem id="menu_trip_main" name="Trips"/>
    <menuitem id="menu_trip" parent="menu_trip_main" action="action_trip"/>
</odoo>