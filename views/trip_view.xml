<odoo>
    <record id="view_trip_form" model="ir.ui.view">
        <field name="name">trandom.trip.form</field>
        <field name="model">trandom.trip</field>
        <field name="arch" type="xml">
            <form string="Trip">
                <sheet>
                    <group>
                        <field name="id"/>
                        <field name="name"/>
                        <field name="trip_type"/>
                        <field name="description"/>
                        <field name="customer"/>
                        <field name="excursions"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trip_tree" model="ir.ui.view">
        <field name="name">trandom.trip.tree</field>
        <field name="model">trandom.trip</field>
        <field name="arch" type="xml">
            <tree string="Trip">
                <field name="id"/>
                <field name="trip_type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
        <!-- vista Kanban -->
    <record id="view_trip_kanban" model="ir.ui.view">
        <field name="name">trandom.trip.kanban</field>
        <field name="model">trandom.trip</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="trip_type"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="'https://content.skyscnr.com/m/5ef9ee6d084a5dd7/original/GettyImages-457926043_doc.jpg'" alt="imagen aviÃ³n"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <span>: </span>
                                    <field name="description"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>