<odoo>
    <data>
        <record id="view_form_excursions" model="ir.ui.view">
            <field name="name">excursions.form</field>
            <field name="model">trandom.excursions</field>
            <field name="arch" type="xml">
                <form string="Excursion">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="duration"/>
                            <field name="trip_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_excursions_tree" model="ir.ui.view">
            <field name="name">trandom.excursions.tree</field>
            <field name="model">trandom.excursions</field>
            <field name="arch" type="xml">
                <tree string="Excursions">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="duration"/>
                    <field name="trip_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>